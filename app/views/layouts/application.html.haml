!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TodoApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    %p.notice= notice
    %p.alert= alert
    %header.header
      .header_logos
        %p.header_pageTitle
          = link_to 'todo-app', root_path
      - if user_signed_in?
        .dropdown
          = image_tag current_user.avatar_image, class: 'header_avatar'
          .dropdown-content
            = link_to 'log out', destroy_user_session_path, data: { method: 'delete' }
            = link_to 'profile edit', edit_profile_path
      - else
        = link_to 'log in', new_user_session_path, class: 'header_loginBtn'
    = yield

