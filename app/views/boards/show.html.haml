.container
  .header-sub
    %h1 All Tasks
  .board-list
    - @tasks.each do |task|
      = link_to board_task_path(@board,task) do
        .board-item
          .board-eyecatch
            - if task.eye_catch.attached?
              = image_tag task.eye_catch, class: 'eyecatch'
          .board-title
            = task.title
          .board-description
            = task.content
          .board-footer
            .avatar
              = image_tag 'User.png', class: 'header_avatar'
        - if user_signed_in? && current_user.has_written?(task)
          .board_detail_actions
            .dropdown
              = image_tag 'select.png', class: 'dropbtn'
              .dropdown-content.mini
                = link_to '編集する', edit_board_path(task)
                = link_to '削除する', board_path(task), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }

.container
  .board-list
    = link_to 'Add New Task', new_board_task_path(@board)