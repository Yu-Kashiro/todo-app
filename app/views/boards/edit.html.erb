<div class=container>
  <h1>Edit Board</h1>
  <%= form_with(model: @board, url: board_path(@board), method: 'put', local: true) do |f| %>
    <%= f.label :title, 'Name' %>
    <br>
    <%= f.text_field :title, class: 'text' %>
    <br>
    <%= f.label :content, 'Description' %>
    <br>
    <%= f.text_area :content, class: 'text' %>
    <br>
    <%= f.label :deadline, 'Deadline' %>
    <br>
    <%= f.date_select :deadline, class: 'date' %>
    <br>
    <%= f.submit "Submit", class: 'btn-primary' %>
  <% end %>
</div>