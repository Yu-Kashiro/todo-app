.container
  .header-sub
    %h1
      = @board.title
  .board-list
    - @tasks.each do |task|
      = link_to board_task_path(@board,task) do
        .board-item
          .board-eyecatch
            - if task.eye_catch.attached?
              = image_tag task.eye_catch, class: 'eyecatch'
          .board-title
            = task.title
          .board-description
            = task.content
          .board-footer
            = image_tag @board.user.avatar_image, class: 'header_avatar'
            - @comments = task.comments.all
            - @comments.each do |comment|
              .avatar
                = image_tag comment.user.avatar_image, class: 'header_avatar'
.container
  .board-list
    = link_to 'Add New Task', new_board_task_path(@board), class: 'add-board'